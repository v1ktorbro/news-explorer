{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "no-underscore-dangle": ["error", { "allow": ["_id", "_updateToken"] }],
      "react/prop-types": 0,
      "no-console": ["error", { "allow": ["warn", "error"] }],
      "max-len": ["error", { "code": 200, "ignoreStrings": true }],
      "no-useless-escape": 0,
      "no-unused-expressions": ["error", { "allowTernary": true }],
      "eslint default-case": "disable"
    }
}